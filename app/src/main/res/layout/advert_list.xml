<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/advert_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gentestimage"
        android:scaleType="centerInside"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13h"
            android:fontFamily="sans-serif"
            android:id="@+id/time_passed_adv_text_view"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/hint_text_color"
            />
        <TextView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="@drawable/circle_textview_background"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/cback"
            android:layout_centerInParent="true"
            android:text="" />
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:id="@+id/adv_comment_image_button"
            android:layout_gravity="center"
            android:tint="#FFFFFF"
            android:background="?android:selectableItemBackground"
            app:srcCompat = "@drawable/ic_question_answer" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="13"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:id="@+id/number_of_adv_comments_text_view"
            android:layout_toRightOf="@id/cback"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/view_divider"
        android:background="@color/hint_text_color" />

</LinearLayout>