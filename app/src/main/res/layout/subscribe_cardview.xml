<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp"
    android:elevation="@dimen/cardview_default_elevation"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/dept_codes"
            android:hint="course"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="24dp"
            android:ems="10"
            android:inputType="textCapCharacters">
        </AutoCompleteTextView>
        <AutoCompleteTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/semester_codes"
            android:hint="code"
            android:layout_toRightOf="@id/dept_codes"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:ems="10"
            android:inputType="number">
        </AutoCompleteTextView>
        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/course_credit_units"
            android:layout_alignParentRight="true"
            android:text=""
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No course selected!!!"
            android:id="@+id/course_title"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/dark_grey"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ok"
            android:id="@+id/ok_and_check"
            android:layout_toRightOf="@id/semester_codes"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="ADD\nas New "
            android:id="@+id/add_new_course_but"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

